{
    "name": "TopAnimeStream",
    "version": "0.0.1",
    "description": "Watch animes",
    "private": true,
    "main": "app://host/index.html",
    "homepage": "http://www.topanimestream.com",
    "manifestUrl": "http://www.topanimestream.com/apps/desktop/package.json",
    "packages": {
        "mac": {
            "url": "http://www.topanimestream.com/apps/desktop/mac/topanimestream_app.zip"
        },
        "win": {
            "url": "http://www.topanimestream.com/apps/desktop/win/topanimestream_app.zip"
        },
        "linux32": {
            "url": "http://www.topanimestream.com/apps/desktop/linux32/topanimestream_app.tar.gz"
        },
        "linux64": {
            "url": "http://www.topanimestream.com/apps/desktop/linux64/topanimestream_app.tar.gz"
        }
    },
    "settings": {
        "apiDataUrl": "http://www.topanimestream.com/AnimeServices/AnimeDataService.svc",
